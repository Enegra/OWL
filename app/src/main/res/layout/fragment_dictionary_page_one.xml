
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.app.agnie.owl.Fragments.DictionaryPageOne">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/dictionary_screech_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/large_picture_padding"
        android:paddingEnd="@dimen/large_picture_padding"
        android:paddingTop="@dimen/medium_picture_padding"
        android:paddingBottom="@dimen/small_picture_padding"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/mug" />
    <LinearLayout
        android:id="@+id/screech_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_text_margin"
        android:layout_below="@id/dictionary_screech_image">
        <TextView
            android:id="@+id/screech_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/dictionary_word_header"
            style="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/screech_title_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/dictionary_word_translation"
            style="@style/TextAppearance.AppCompat.Small"/>
    </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
